<style>
  .grid-item-ball {
    display: grid;
    grid-template-columns: 1fr 24px;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }
  .grid-item-ball-reverse {
    grid-template-columns: 24px 1fr;
    padding: 0.8rem 0;
  }

  p {
    font-style: italic;
  }

  h3 {
    font-weight: 700;
    padding: 2rem 0;
    font-size: large;
    font-style: normal;
  }
  .grid-item-ball .fa-circle {
    color: var(--clr-brand-blue);
    font-style: normal;
    width: fit-content;
    margin: auto;
    font-size: small;
    position: relative;
    z-index: 2;
  }
  .grid-item-ball-reverse .fa-circle {
    color: var(--clr-brand-orange);
  }
  h3.grid-item-ball .fa-circle {
    font-size: larger;
  }

  .bar {
    position: absolute;
    width: 4px;
  }
  .blue-bar {
    height: 100%;
    top: 40px;
    right: 10px;
    background-color: var(--clr-brand-blue);
    animation: animateVertical 2.5s 1 ease-out;
  }
  .black-bar-blue {
    height: 100%;
    top: -2%;
    right: 10px;
    background-color: var(--clr-charchoal);
    z-index: 1;
  }
  .orange-bar {
    height: 93%;
    top: 40px;
    left: 10px;
    background-color: var(--clr-brand-orange);
    animation: animateVertical 2.5s 1 ease-out;
  }
  .black-bar-orange {
    height: 100%;
    top: -6%;
    left: 10px;
    background-color: var(--clr-charchoal);
    z-index: 1;
  }

  .ball-black {
    padding: 1rem 0;
  }

  .grid-item-ball-reverse.ball-black {
    padding: .5rem 0;
  }

  .ball-black .fa-circle {
    color: var(--clr-charchoal);
  }
</style>

