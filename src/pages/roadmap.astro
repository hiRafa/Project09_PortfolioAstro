---
import Layout from "../layouts/Layout.astro";

import ProjectLayoutLinks from "../components/ProjectLayout-Links.astro";
---

<style>
  .grid-item-ball {
    display: grid;
    grid-template-columns: 1fr 24px;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }
  .grid-item-ball-reverse {
    grid-template-columns: 24px 1fr;
    padding: 0.67rem 0;
  }

  p {
    font-style: italic;
  }

  h3 {
    font-weight: 700;
    padding: 2rem 0;
    font-size: large;
    font-style: normal;
  }
  .grid-item-ball .fa-circle {
    color: var(--clr-coder);
    font-style: normal;
    width: fit-content;
    margin: auto;
    font-size: small;
  }
  .grid-item-ball-reverse .fa-circle {
    color: var(--clr-sys);
  }
  h3.grid-item-ball .fa-circle {
    font-size: larger;
  }

  .bar {
    position: absolute;
    width: 4px;
  }
  .blue-bar {
    height: 760px;
    top: 40px;
    right: 10px;
    background-color: var(--clr-coder);
  }
  .black-bar-blue {
    height: 96%;
    top: 4%;
    right: 10px;
    background-color: var(--clr-charchoal);
    z-index: -1;
  }
  .orange-bar {
    height: 470px;
    top: 40px;
    left: 10px;
    background-color: var(--clr-sys);
  }
  .black-bar-orange {
    height: 96%;
    top: 4%;
    left: 10px;
    background-color: var(--clr-charchoal);
    z-index: -1;
  }

  .ball-black .fa-circle {
    color: black;
  }
</style>

