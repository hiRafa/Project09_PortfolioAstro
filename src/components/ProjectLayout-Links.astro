---
import { Image } from "astro:assets";
import ProjectGithubIcon from "./ProjectGithubIcon.astro";
import ProjectFigmaIcon from "./ProjectFigmaIcon.astro";

const { project, road, icons } = Astro.props;
---

<style>
  a p {
    font-size: 11px;
  }

  .bars-container {
    position: relative;
    width: 500px;
    height: 500px;
    padding-left: 18px;
  }
  @media screen and (max-width: 600px) {
    .bars-container {
      width: clamp(200px, 80vw, 500px);
      height: clamp(300px, 30vh, 500px);
    }
  }

  .h-bar-container {
    width: calc(100% - 50px);
    left: 50px;
  }
  .v-bar-container {
    height: calc(100% - 50px);
    top: 50px;
  }

  .v-bar,
  .h-bar {
    position: absolute;
    background-color: var(--clr-brand-orange);
  }
  .v-bar {
    height: 100%;
    width: 3px;
    top: 0;
    animation: animateVertical 0.8s 1 ease-in-out;
  }
  .h-bar {
    width: 100%;
    height: 3px;
    left: 0;
    animation: animateHorizontal 0.8s 1 ease-in-out;
  }
  .d-bar {
    height: 100%;
    width: 3px;
    background-color: var(--clr-bg);
    animation: animateVertical 0.8s 1 ease-in-out;
    background-color: var(--clr-brand-orange);
  }
  .d-bar-container {
    rotate: 45deg;
    height: 70px;
    top: -3px;
    left: 40px;
    position: absolute;
  }
  .d-barup {
    height: 70px;
    width: 3px;
    rotate: 30deg;
    position: absolute;
    top: -65px;
    left: 20px;
    background-color: var(--clr-brand-orange);
  }

  .star {
    position: absolute;
    width: 20px;
    z-index: 50;
    color: var(--clr-bg)
  }
  .star-btm {
    bottom: -8px;
  }
  .star-top {
    top: -8px;
  }
  .star-right {
    right: -8px;
  }
  .star-left {
    left: -8px;
  }
</style>

<div class=" absolute top-8 pl-4 gap-y-4 w-6/6 z-0">
  <div class="bars-container col-start-1 col-span-full">
    <div class="relative h-bar-container">
      <i class="fa-solid fa-circle star -top-3 -left-1 text-xl opacity-100"></i>
      <div class="h-bar"></div>
      <i class="fa-solid fa-circle star -top-3 -right-4 text-xl opacity-100"
      ></i>
      <div class="d-barup"></div>
    </div>
    <div class="relative v-bar-container">
      <i class="fa-solid fa-circle star -top-2 -left-2 text-xl opacity-100"></i>
      <div class="v-bar"></div>
      <i class="fa-solid fa-circle star -bottom-2 -left-2 text-xl opacity-100"
      ></i>
    </div>
    <div class="d-bar-container">
      <div class="d-bar"></div>
    </div>
  </div>
</div>
