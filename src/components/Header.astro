---
import { Image } from "astro:assets";
import H1 from "./H1.astro";
import RafaPic from "./Rafa-pic.astro";

const { headerIndex, class: className, ...rest } = Astro.props;
---

<style>
  .star-container {
    height: fit-content;
    position: relative;
  }

  .star-bar {
    height: 2px;
    width: 50px;
    background-color: white;
    position: absolute;
    top: 0;
    bottom: 0;
    right: 4px;
    margin: auto;
  }

  .fa-diamond {
    display: block;
    margin: auto;
    font-size: 16px;
  }

  
  .li-year,
      .li-role {
        font-size: 12px;
        line-height: 1.8;
        display: block;
      }
</style>

<header class={className} {...rest}>
  <H1 text="HIRASHIKI RAFAEL" index={false} />
  <!-- <p class="absolute bottom-0">powered by Astro</p> -->
  <Image
    src={headerIndex
      ? "/Images/stars-topleft-index.svg"
      : "/Images/stars-topleft.svg"}
    width={220}
    height={40}
    format="svg"
    alt="stars bg"
    class="fixed top-8 z-10"
  />
  <div
    class="relative col-start-2 col-span-4 flex flex-col justify-between h-full pt-24 pr-4"
  >
    <Image
      src={headerIndex
        ? "/Images/stars-bottomleft-index.svg"
        : "/Images/stars-bottomleft.svg"}
      width={440}
      height={450}
      format="svg"
      alt="stars bg"
      class="absolute bottom-0 -left-12 z-10"
    />

    {
      headerIndex ? (
        <>
          <section class="self-start">
            <H1 text="HIRASHIKI RAFAEL" index={true} />
            <p>Casual Dancer</p>
          </section>

          <section class="">
            <h2 class="text-3xl font-bold min-xl:text-2xl">
              ⯁ Web Frontend Developer (Junior)
            </h2>
            <br />
            <h3 class="text-3xl font-bold min-xl:text-2xl">
              ❍ System Developer (graduating)
            </h3>
          </section>

          <section class="">
            <p class="pb-6 text-xl min-xl:text-lg">
              From Brazil, Based in Tokyo. <br />
              Passionate for connecting stars, understanding problems, finding
              solutions, upgrading performances and flows.
            </p>
            <p>Special interest in health, environment and nature fields</p>
          </section>

          <nav class="self-end justify-self-end relative z-50 pb-24">
            <ul>
              <li class="">
                <a
                  href="/roadmap"
                  class="text-4xl min-xl:text-3xl font-bold flex flex-nowrap justify-center items-center gap-4"
                >
                  <p class="underline">RoadMap & Projects</p>
                  <p class="text-3xl">⟢</p>
                </a>
              </li>
            </ul>
          </nav>
        </>
      ) : (
        <>
          <RafaPic class=" w-4/6 m-auto" />
          <nav class="pb-24 relative z-50">
            <ul>
              <li>
                <a
                  href="/"
                  class="text-2xl min-xl:text-xl font-bold flex flex-nowrap justify-between items-center gap-4"
                >
                  <p class="flex gap-1 items-end">
                    Home <span class="li-role" />
                  </p>
                  <div class="star-container">
                    <>
                      <div class="star-bar" />
                      <i class="fa-solid fa-diamond" />
                    </>
                  </div>
                </a>
              </li>
              <li>
                <a
                  href="/roadmap"
                  class="text-2xl min-xl:text-xl font-bold flex flex-nowrap justify-between items-center gap-4"
                >
                  <p class="flex gap-1 items-end">
                    RoadMap & Projects</br>
                    <span class="li-role">"to INFINITY and Beyond!"</span>
                  </p>
                  <div class="star-container">
                    <>
                      <div class="star-bar" />
                      <i class="fa-solid fa-diamond" />
                    </>
                  </div>
                </a>
              </li>
              <li class="li-year">2023</li>
              <li>
                <a
                  href="/project05"
                  class="text-2xl min-xl:text-xl font-bold flex flex-nowrap justify-between items-center gap-4"
                >
                  <p class="flex gap-1 items-end">
                    Agendae+ <span class="li-role">System Dev</span>
                  </p>
                  <div class="star-container">
                    <>
                      <div class="star-bar" />
                      <i class="fa-solid fa-diamond" />
                    </>
                  </div>
                </a>
              </li>
              <li>
                <a
                  href="/project04"
                  class="text-2xl min-xl:text-xl font-bold flex flex-nowrap justify-between items-center gap-4"
                >
                  <p class="flex gap-1 items-end">
                    Medical Records <span class="li-role">Coder Next.js</span>
                  </p>
                  <div class="star-container">
                    <>
                      <div class="star-bar" />
                      <i class="fa-solid fa-diamond" />
                    </>
                  </div>
                </a>
              </li>
              <li class="li-year">2022</li>
              <li>
                <a
                  href="/project03"
                  class="text-2xl min-xl:text-xl font-bold flex flex-nowrap justify-between items-center gap-4"
                >
                  <p class="flex gap-1 items-end">
                    Music Store <span class="li-role">Coder React.js</span>
                  </p>
                  <div class="star-container">
                    <>
                      <div class="star-bar" />
                      <i class="fa-solid fa-diamond" />
                    </>
                  </div>
                </a>
              </li>
              <li>
                <a
                  href="/project02"
                  class="text-2xl min-xl:text-xl font-bold flex flex-nowrap justify-between items-center gap-4"
                >
                  <p class="flex gap-1 items-end">
                    Bakery LP <span class="li-role">Coder HTML/CSS/JS</span>
                  </p>
                  <div class="star-container">
                    <>
                      <div class="star-bar" />
                      <i class="fa-solid fa-diamond" />
                    </>
                  </div>
                </a>
              </li>
              <li>
                <a
                  href="/project01"
                  class="text-2xl min-xl:text-xl font-bold flex flex-nowrap justify-between items-center gap-4"
                >
                  <p class="flex gap-1 items-end">
                    Dance School LP
                    <span class="li-role">Coder HTML/CSS/JS</span>
                  </p>
                  <div class="star-container">
                    <>
                      <div class="star-bar" />
                      <i class="fa-solid fa-diamond" />
                    </>
                  </div>
                </a>
              </li>
              <li>
                <a
                  href="/oldportfolio"
                  class="text-2xl min-xl:text-xl font-bold flex flex-nowrap justify-between items-center gap-4"
                >
                  <p class="flex gap-1 items-end">
                    Portfolio v1 <span class="li-role">Coder HTML/CSS/JS</span>
                  </p>
                  <div class="star-container">
                    <>
                      <div class="star-bar" />
                      <i class="fa-solid fa-diamond" />
                    </>
                  </div>
                </a>
              </li>
            </ul>
          </nav>
        </>
      )
    }
  </div>
</header>
