---
import Layout from "../layouts/Layout.astro";
import ProjectLayoutLinks from "./ProjectLayout-Links.astro";
import ProjectLayoutBody from "./ProjectLayout-Body.astro";
import ProjectLayoutHead from "./ProjectLayout-Head.astro";

const { project } = Astro.props;
---

<Layout
  title="Hirashiki Rafael's Portfolio Project"
  description={project?.data.projectSubtitle}
>
  <ProjectLayoutLinks project={project} />
  <ProjectLayoutHead project={project} />
  
  <ProjectLayoutBody>
    <a href={project?.data.projectURL} target="_blank">
      <img src={`/Images/${project?.data.thumbnail}.webp`} class="" />
    </a>

    <ul
      class={`absolute bottom-0 -right-8 font-bold py-8 w-fit ml-auto text-right css-glass-bg px-6`}
    >
      {
        project?.data.projectBulletList.map((option: string) => (
          <li>‚ùç {option}</li>
        ))
      }
    </ul>
  </ProjectLayoutBody>
</Layout>
