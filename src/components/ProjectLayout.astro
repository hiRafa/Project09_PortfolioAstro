---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import ProjectLayoutLinks from "./ProjectLayout-Links.astro";

const { project, sysdev } = Astro.props;

console.log(project.data.thumbnail_extra);
---

<style>
  .fa-brands {
    font-size: 50px;
  }
</style>

<Layout>
  <ProjectLayoutLinks project={project}/>
  <div class="col-start-3 col-span-9 relative">
    <img src={`/Images/${project.data.thumbnail}.jpg`} />
    <slot/>
    <p class="py-4">{project.data.projectSubtitle}</p>
    <ul class={`font-bold py-8 w-fit m-auto ${!sysdev ? "brand-blue" : "brand-orange"} `}>
      {
        project.data.projectBulletList.map((option: string) => (
          <li>‚ùç {option}</li>
        ))
      }
    </ul>
    <div class="grid grid-cols-2 gap-4 ">
      {
        project.data.thumbnail_extra?.map((ele: string, index: number) => (
          <Image
            src={`/Images/${ele}.jpg`}
            width={1100}
            height={1000}
            format="jpg"
            alt=""
            class=""
          />
        ))
      }
    </div>
    <slot />
  </div>
</Layout>
