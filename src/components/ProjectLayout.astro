---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import ProjectLayoutLinks from "./ProjectLayout-Links.astro";

const { project, road, sysdev } = Astro.props;

// console.log(project.data.projectBulletList);
---

<style>
  .fa-brands {
    font-size: 50px;
  }
</style>
<Layout>
  <ProjectLayoutLinks project={project}/>
  <div class="col-start-2 col-span-6 relative">
    <img src={`/Images/${project.data.thumbnail}.jpg`} />
    <p class="py-4">{project.data.projectSubtitle}</p>
    <ul class={`font-bold py-8 w-fit m-auto ${!sysdev ? "brand-blue" : "brand-orange"} `}>
      {
        project.data.projectBulletList.map((option: string) => (
          <li>‚ùç {option}</li>
        ))
      }
    </ul>
    <div class="grid grid-cols-2 gap-4 ">
      {
        project.data.thumbnail_extra?.map((ele: string, index: number) => (
          <Image
            src={`/Images/${ele}.png`}
            width={500}
            height={500}
            format="png"
            alt="stars bg"
            class=""
          />
        ))
      }
    </div>
  </div>
</Layout>
